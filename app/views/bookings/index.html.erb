<div class = "container">
  <h1>Amazing! Here you see all your listings</h1>
  <h2>Bookings:</h2>
  <div class="cards container pb-10 ">
    <% @bookings.each do |booking|%>
      <div class="card-trip">
    <% if booking.space.photos.attached? %>
      <% booking.space.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h2 class="index-color-orange"><%=booking.space.name%></h2>
          <p> Beginnig: <%= booking.start_date.strftime("%B") %> <%= booking.start_date.strftime("%d") %>, <%= booking.start_date.strftime("at %I:%M%p") %></p>
          <p> Ending: <%= booking.end_date.strftime("%B") %> <%= booking.end_date.strftime("%d") %>, <%= booking.end_date.strftime("at %I:%M%p") %> </p>
          <p><%=booking.space.description%></p>
          <div class = "flex">
          <%= link_to "Delete",booking_path(booking),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
          <%= link_to "Update",edit_booking_path(booking) %>
          <p><%= link_to "Learn More", space_path(booking.space) %></p>
          </div>
        </div>
        <h2 class="card-trip-pricing"><%=booking.space.price%>$</h2>
        <img src="https://res.cloudinary.com/dfx8gzbl4/image/upload/v1686049497/b2344430-b52f-4327-a75d-98954ffe3407_kkseel.jpg" class="card-trip-user avatar-bordered" />
      </div>
    </div>
    <%end%>
  </div>

  <h2>Spaces:</h2>
  <div class="cards container pb-10 ">
    <% @spaces.each do |space|%>
      <div class="card-trip">
    <% if space.photos.attached? %>
      <% space.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h2 class="index-color-orange"><%=space.name%></h2>
          <p><%=space.description%></p>
         <div class = "flex">
          <p> <%= link_to "Delete",space_path(space),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%> </p>
          <p> <%= link_to "Update",edit_space_path(space)%> </p>
          <p> <%= link_to "Learn More", space_path(space) %></p>
          </div>
        </div>
        <h2 class="card-trip-pricing"><%=space.price%>$</h2>
        <img src="https://res.cloudinary.com/dfx8gzbl4/image/upload/v1686049497/b2344430-b52f-4327-a75d-98954ffe3407_kkseel.jpg" class="card-trip-user avatar-bordered" />
      </div>
    </div>
    <%end%>
  </div>


  <p> <%= link_to "Home", root_path, class: "btn btn-warning"%></p>
</div>
