<% if user_signed_in? %>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-warning text-white" %>
<% else %>
<%= button_to "Log in", user_session_path, method: :get, class: "btn btn-warning text-white" %>
<% end %>

<div class="container text-center">
<h1 class="no-underline">A list of all the spaces to rent</h1>
<H3>Create a new Space</H3>
<%= button_to "New", new_space_path(@space), method: :get, class: "btn btn-warning text-white" %>
</div>

<div class="container">
<h2>Event spaces in ya area! ðŸŽ‰</h2>
<br>
</div>

<div class="cards container pb-10">
<% @spaces.each do |space|%>
  <div class="card-trip">
<% if space.photos.attached? %>
  <% space.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%=space.name%></h2>
      <p><%= link_to "Learn More", space_path(space) %></p>
      <p><%=space.description%></p>
    </div>
    <h2 class="card-trip-pricing"><%=space.price%>$</h2>
    <img src="https://res.cloudinary.com/dfx8gzbl4/image/upload/v1686049497/b2344430-b52f-4327-a75d-98954ffe3407_kkseel.jpg" class="card-trip-user avatar-bordered" />
  </div>
</div>
<%end%>
